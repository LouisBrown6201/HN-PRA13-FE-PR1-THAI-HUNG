            .menu__header
                ul.menu__list
                    li.menu__item
                        a.menu__link.active(aria-current='page' href='#') TRANG CHỦ
                    li.menu__item
                        a.menu__link(href='#') GIỚI THIỆU
                    li.menu__item
                        a.menu__link(href='#') SẢN PHẨM
                    li.menu__item
                        a.menu__link(href='#') TIN KHUYẾN MẠI
                    li.menu__item
                        a.menu__link(href='#') DỊCH VỤ
                    li.menu__item
                        a.menu__link(href='#') LIÊN HỆ
                        
                .menu__cart
                    .menu__cart__wrap
                        img.menu__cart__icon(srcset="./assets/icons/cart.png")
